@model IEnumerable<RoyalJay.BikeInventory.Data.Models.Bike>

<div class="bikes" data-bind="css: { visible: loaded() && !fatal() && bikes().length }">
    <table class="table table-striped table-responsive table-hover">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                @*<th>@Html.DisplayNameFor(model => model.Brand)</th>
                <th>@Html.DisplayNameFor(model => model.Model)</th>
                <th>@Html.DisplayNameFor(model => model.Color)</th>*@
                <th>@Html.DisplayNameFor(model => model.TypeId)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.InStorage)</th>
                <th></th>
            </tr>
        </thead>

        <tbody data-bind="foreach: { data: bikes, afterAdd: afterAddBike, beforeRemove: beforeRemoveBike }">
            <tr class="bike-hidden">
                <td data-bind="text: Code"></td>
                <td data-bind="text: Description"></td>
                @*<td data-bind="text: Brand"></td>
                <td data-bind="text: Model"></td>
                <td data-bind="text: Color"></td>*@
                <td data-bind="text: Type() && Type().Description()"></td>
                <td data-bind="text: '$' + Price().toFixed(2)"></td>
                <td data-bind="text: Quantity"></td>
                <td data-bind="text: InStorage() ? 'Yes' : 'No'"></td>
                <td style="text-align: right;">
                    <button class="btn btn-default details">Details</button>
                    <button class="btn btn-danger delete" title="Delete"><span class="glyphicon glyphicon-ban-circle"></span></button>
                </td>
            </tr>
        </tbody>

        <tfoot>
            <tr>
                <td colspan="8">
                    <span style="line-height: 26px;">
                        Showing
                        <b data-bind="text: (bikesPage() * pageSize() + 1)"></b>
                        to
                        <b data-bind="text: (bikesPage() * pageSize() + bikes().length)"></b>
                        of
                        <b data-bind="text: bikesTotal"></b>
                        items
                    </span>

                    <div class="pull-right">
                        <button type="button" class="btn btn-default btn-sm prev" title="Previous" data-bind="disable: bikesPage() < 1">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </button>
                        <button type="button" class="btn btn-default btn-sm next" title="Next" data-bind="disable: (bikesPage() * pageSize() + bikes().length) >= bikesTotal()">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </button>
                    </div>
                </td>
            </tr>
        </tfoot>

    </table>
</div>
